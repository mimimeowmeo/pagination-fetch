{
  "compilerOptions": {
    "target": "es5", // Target a specific ECMAScript version
    "lib": ["dom", "dom.iterable", "esnext"], // Include library files
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Resolve modules using Node.js resolution
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "noEmit": true, // Disable emitting compiled JavaScript files
    "jsx": "react-jsx" // Enable the new JSX transform for React 17+
  },
  "include": ["src"], // Include the `src` folder for compilation
  "exclude": ["node_modules", "build"] // Exclude unnecessary folders
}
